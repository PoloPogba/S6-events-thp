<html>
  <head>
    <title>Welcome to Eventbrite, @user.first_name @user.last_name !</title>
  </head>

    <body> 


        <main role="main">

        <!-- Main jumbotron for a primary marketing message or call to action -->
        <div class="jumbotron">
            <div class="container">
            <h1 class="display-3">Welcome to Eventbrite, <% @user.email %> </h1> <br>

                <p>Ton nom : <% @user.last_name %> </p>
                <p>Ton prénom : <% @user.first_name %> </p>
                <p>Ton email : <% @user.email %> </p>
                <p>Ta date d'inscription : <% @user.created_at %> </p> <br>


                <h3>Voici tous les événements dont tu es administrateur : </h3>
            <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more &raquo;</a></p>
            </div>
        </div>  <!-- /jumbotron -->

            
            <div class="container">  <!-- container -->
        
                <% @events.each do |event| %>
            
                    <div class="card" style = "margin-bottom:25px" >
                <div class="card-header" >
                    Location : <%= event.location %>
                    <br>
                    Duration : <%= event.duration %> min
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= event.title %></h5>
                    <p class="card-text"><%= event.description %></p>
                    <a class="btn btn-primary" <%= link_to "Go to event page", event_path(event) %> </a>
                </div>
                </div>
                <% end %>

            </div> <!-- /container -->

    </main>

    </body>

</html>